<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="app.museu.macs.fragments.LocationFragment"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_item"
        android:id="@+id/titleLocation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/black"
        android:padding="5dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/imageLocationMap"
        android:layout_below="@+id/titleLocation"
        android:src="@drawable/locationimage"
        android:layout_centerHorizontal="true"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/addressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textColor="@color/black"
        android:layout_below="@+id/imageLocationMap"
        android:layout_centerHorizontal="true"
        android:padding="5dp" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/buttonHowToGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/addressText"
        android:text="@string/text_how_to_get"
        android:layout_centerHorizontal="true"
        bootstrap:bb_icon_left="fa-location-arrow"
        bootstrap:bb_type="primary" />

</RelativeLayout>
